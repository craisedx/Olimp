@model Olimp.ViewModels.StoreWarehouse.StoreWarehouseViewModel

<div class="container">
    <div class="row mt-5">
        <div class="col-lg-8">
            <img class="border shadow" src="@Model.Product.Image" style="height: 450px;width: 700px; object-fit: cover;">
        </div>
        <div class="col-lg-4">
            <div class="d-flex align-items-baseline">
                <h1 class="card-title">@Model.Product.Title</h1>
                @if (Model.Discount != 0)
                {
                    <span class="badge badge-danger ml-2" style="font-size:30px;">-@Model.Discount%</span>
                }
            </div>
            <div class="price">
                <div class="d-flex align-items-baseline">
                    @if (Model.Discount == 0)
                    {
                        <div class="d-flex align-items-baseline">
                            <h1 class="text-success">@Model.Price</h1>
                            <h3 class="ml-2">BYN</h3>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-baseline">
                            <h1 class="text-danger">@Math.Round(Model.Price - Model.Price * (Model.Discount / 100.00), 2)</h1>
                            <del class="ml-1">@Model.Price</del>
                            <h3 class="ml-2">BYN</h3>
                        </div>
                    }
                </div>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <form method="post" asp-controller="Product" asp-action="AddProductToBasket">
                    <div class="d-flex justify-content-start align-items-center mt-2">
                        <div class="qty">
                            <input type="hidden" name="UserId" value="@User.Claims.ElementAt(0).Value"/>
                            <input type="hidden" id="productId" name="StoreWarehouseId" value="@Model.Id"/>
                            <input id="quantity" type="hidden" name="Quantity" value="1"/>
                            <span class="minus bg-dark">-</span>
                            <input id="count" class="count" name="qty" value="1"/>
                            <span class="plus bg-dark">+</span>
                        </div>
                        <button class="btn btn-success" type="submit">В корзину</button>
                    </div>
                </form>
            }
            <div class="mt-4 d-flex flex-row align-items-baseline">
                <div class="h5">В наличии :</div>
                <p class="ml-1">@Model.Quantity</p>
            </div>
            <div class="mt-2 d-flex flex-row align-items-baseline">
                <div class="h5">Производитель :</div>
                <p class="ml-1">@Model.Product.Brand.ProductBrand</p>
            </div>
            <div class="mt-2 d-flex flex-row align-items-baseline">
                <div class="h5">Категория :</div>
                <p class="ml-1">@Model.Product.Category.ProductCategory</p>
            </div>
        </div>
        <div class="mt-3 col-lg-12">
            <div class="h5">Описание :</div>
            <p>@Model.Product.Description</p>
        </div>
        <div class="col-lg-12">
            @if (User.Identity.IsAuthenticated)
            {
                <div>
                    <div class="form-group">
                        <h5>Оцените товар:</h5>
                        <input id="rating" name="rating">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" id="textArea" rows="5" style="resize:none"></textarea>
                    </div>
                    <button id="but1" class="btn btn-primary">Отправить</button>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <strong>Ой!</strong> Войдите в аккаунт чтобы оставлять комментарии.
                </div>
            }
        </div>
    </div>
    @if (ViewBag.AllComments.Count != 0)
    {
        <div class="row mt-3">
            <div class="col-11 col-md-12 bg-secondary p-3 mb-5 bg-white rounded">
                @foreach (var item in ViewBag.AllComments)
                {
                    <div class="col-12 col-md-12 bg-secondary shadow-sm p-3 mb-3 bg-white rounded border">
                        <div class="row border-bottom">
                            <div class="col-9 d-flex align-items-baseline pb-3">
                                <span style="font-size:24px;" class="font-weight-bold mr-3">@item.User.UserName</span>
                                @for (int i = 0; i < @item.Star; i++)
                                {
                                    <span class="k-icon k-i-star selected"></span>
                                }
                                @for (int i = 0; i < 10 - item.Star; i++)
                                {
                                    <span class="k-icon k-i-star-outline"></span>
                                }
                            </div>
                        </div>
                        <br class="br">
                        <p>@item.Text</p>
                    </div>
                }

            </div>
        </div>
    }
</div>
<script>
$(document).ready(function() {
            $("#rating").kendoRating({
                min: 1,
                max: 10,
                value: 0,
                precision: "item"
            });
     });
    
    $('#but1').click(function () {
        var message = $("#textArea").val();
        var product = $("#productId").val();
        var score = $("#rating").data("kendoRating").value();
        var buildUrl = "@Url.Action("AddFeedBack", "Product")" + `/?rating=${score}&product=${product}&message=${message}`;
        $.ajax({
            type: "POST",
            url: buildUrl,
            success: function(response) {
                alert(response);
                window.location.reload();
            },
        });
    });

</script>

<style>
    .qty .count {
        color: #000;
        display: inline-block;
        vertical-align: top;
        font-size: 25px;
        font-weight: 700;
        line-height: 30px;
        padding: 0 2px;
        min-width: 35px;
        max-width: 76px;
        text-align: center;
    }

    .qty .plus {
        cursor: pointer;
        display: inline-block;
        vertical-align: top;
        color: white;
        width: 30px;
        height: 30px;
        font: 30px/1 Arial,sans-serif;
        text-align: center;
        border-radius: 50%;
    }

    .qty .minus {
        cursor: pointer;
        display: inline-block;
        vertical-align: top;
        color: white;
        width: 30px;
        height: 30px;
        font: 30px/1 Arial,sans-serif;
        text-align: center;
        border-radius: 50%;
        background-clip: padding-box;
    }

    .minus:hover {
        background-color: #717fe0 !important;
    }

    .plus:hover {
        background-color: #717fe0 !important;
    }
    /*Prevent text selection*/
    span {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
    }

    input {
        border: 0;
        width: 2%;
    }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input:disabled {
            background-color: white;
        }
</style>
<script>
    $(document).ready(function () {
        $('#count').prop('disabled', true);
        $(document).on('click', '.plus', function () {
            if ($('#count').val() < @Model.Quantity) {
                $('#count').val(parseInt($('#count').val()) + 1);
            }
        });
        $(document).on('click', '.minus', function () {
            $('#count').val(parseInt($('#count').val()) - 1);
            if ($('#count').val() == 0) {
                $('#count').val(1);
            }
        });
        $(document).on('click', '.plus', function () {
            if ($('#quantity').val() < @Model.Quantity) {
            $('#quantity').val(parseInt($('#quantity').val()) + 1);
            }
        });
        $(document).on('click', '.minus', function () {
            $('#quantity').val(parseInt($('#quantity').val()) - 1);
            if ($('#quantity').val() == 0) {
                $('#quantity').val(1);
            }
        });
    });
</script>