@model List<Olimp.ViewModels.StoreWarehouse.StoreWarehouseViewModel>

<div class="row">
    @foreach (var item in @Model)
    {
        <div class="col-4 mb-4">
            <div class="card">
                <img class="card-img responsive" src="@item.Product.Image" alt="@item.Product.Title image">
                <div class="card-body">
                    <h4 class="card-title">@item.Product.Title</h4>
                    <div class="buy d-flex justify-content-between align-items-center">
                        <div class="price text-success">
                            <h5 class="mt-4">@item.Price BYN</h5>
                        </div>
                        <a asp-action="Product" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-primary mt-3"><i class="fas fa-shopping-cart"></i>Подробнее</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>