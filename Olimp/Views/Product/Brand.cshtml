@model Olimp.ViewModels.Brand.BrandViewModel

<div class="container">
    <div class="row mt-5">
        <div class="col-lg-12 mb-3 d-flex justify-content-center">
            <h1 class="card-title">@Model.ProductBrand</h1>
        </div>
        <div class="col-lg-12 mb-3 d-flex justify-content-center">
            <img class="border shadow" src="@Model.Image" style="height: 500px;width: 1000px; object-fit: cover;">
        </div>
        <div class="col-lg-12 d-flex justify-content-center">
            <div class="mt-2">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>